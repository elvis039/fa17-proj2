<h3><%= "#{@user.username}'s Profile Page" %></h3>

<p><h1>Reviews</h1>
	<% @user.reviews.each do |r| %>
		<p><%= r.movie.title %></br>
			<%= "#{r.rating}/10" %></br>
			<%= r.comment %></br>
		</p>
	<% end %>
</p>


<% if @user.equls(current_user) then %>
	<h3>Create a new playlist!</h3>
	<%= form_for Playlist.new, url: reviews_create_path(@movie) do |f| %>
		Rating: <%= f.number_field :rating, in: 0..10 %>
		<br />
		Content: <%= f.text_area :comment %>
		<br />
		<%= f.submit %>
	<% end %>
<% end %>


